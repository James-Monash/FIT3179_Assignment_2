{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Bubble chart of deadliest tornadoes: year (x) vs fatalities (y); colour = country; size = fatalities.",
  "data": {
    "url": "https://raw.githubusercontent.com/James-Monash/FIT3179_Assignment_2/main/deadliest_tornadoes.csv",
    "format": { "type": "csv" }
  },
  "width": 798,
  "height": 480,
  "transform": [
    { "calculate": "datum.deaths === '' || datum.deaths === null ? null : +datum.deaths", "as": "deaths_num" },
    { "calculate": "datum.year === '' || datum.year === null ? null : +datum.year", "as": "year_num" },
    { "filter": "datum.year_num >= 1800 && datum.year_num <= 2020" }
  ],
  "mark": { "type": "point", "filled": true, "opacity": 0.85 },
  "encoding": {
    "x": {
      "field": "year_num",
      "type": "quantitative",
      "title": "Year",
      "axis": { "labelAngle": 0, "tickMinStep": 10, "format": "d", "labelFont": "Segoe UI, Roboto, 'Helvetica Neue', Arial, sans-serif", "labelFontSize": 12, "labelFontWeight": 600, "titleFont": "Segoe UI, Roboto, 'Helvetica Neue', Arial, sans-serif", "titleFontSize": 13, "titleFontWeight": 600 },
      "scale": { "domain": [1800, 2020], "nice": false }
    },
    "y": {
      "field": "deaths_num",
      "type": "quantitative",
      "title": "Fatalities",
      "axis": { "labelAngle": 0, "labelFont": "Segoe UI, Roboto, 'Helvetica Neue', Arial, sans-serif", "labelFontSize": 12, "labelFontWeight": 600, "labelAlign": "right", "titleFont": "Segoe UI, Roboto, 'Helvetica Neue', Arial, sans-serif", "titleFontSize": 13, "titleFontWeight": 600 },
      "scale": { "domain": [0, 1500], "nice": false }
    },
    "size": {
      "field": "deaths_num",
      "type": "quantitative",
      "scale": { "range": [40, 800], "domain": [1, 1300] },
      "legend": null
    },
    "color": {
      "field": "country",
      "type": "nominal",
      "scale": {
        "domain": ["Bangladesh", "United States", "Russia", "Italy", "Malta", "Argentina", "Australia"],
        "range": ["#E69F00", "#56B4E9", "#009E73", "#F0E442", "#0072B2", "#D55E00", "#CC79A7"]
      },
      "legend": null
    },
    "tooltip": [
      { "field": "event", "type": "nominal", "title": "Event" },
      { "field": "country", "type": "nominal", "title": "Country" },
      { "field": "year_num", "type": "quantitative", "title": "Year" },
      { "field": "deaths_num", "type": "quantitative", "title": "Fatalities" }
    ]
  },
  "config": {
    "font": "Segoe UI, Roboto, 'Helvetica Neue', Arial, sans-serif",
    "view": { "stroke": "transparent" },
    "axis": {
      "labelFont": "Segoe UI, Roboto, 'Helvetica Neue', Arial, sans-serif",
      "titleFont": "Segoe UI, Roboto, 'Helvetica Neue', Arial, sans-serif",
      "labelFontSize": 12,
      "labelFontWeight": 600,
      "titleFontSize": 13,
      "titleFontWeight": 600,
      "labelAngle": 0,
      "gridColor": "#e6e6e6",
      "gridWidth": 0.8,
      "tickSize": 4
    },
    "legend": {
      "labelFont": "Segoe UI, Roboto, 'Helvetica Neue', Arial, sans-serif",
      "titleFont": "Segoe UI, Roboto, 'Helvetica Neue', Arial, sans-serif",
      "labelFontSize": 12,
      "titleFontSize": 14
    },
    "mark": {
      "clip": true
    }

  }
}
