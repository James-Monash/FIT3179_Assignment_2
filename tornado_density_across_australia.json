{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "width": 800,
  "height": 600,
  "background": "#c6dbef",
  "projection": {
    "type": "mercator",
    "center": [134, -28],
    "scale": 850
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/James-Monash/FIT3179_Assignment_2/main/australia.json",
        "format": {
          "type": "topojson",
          "feature": "ne_50m_admin_1_states_provinces"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#f7f3ea",
        "stroke": "#999",  
        "strokeWidth": 1
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/James-Monash/FIT3179_Assignment_2/main/10_degree_graticules_for_australia.json",
        "format": {
          "type": "topojson",
          "feature": "ne_50m_graticules_10"
        }
      },
      "mark": {
        "type": "geoshape",
        "stroke": "#ccc",
        "strokeWidth": 0.9
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/James-Monash/FIT3179_Assignment_2/main/tornadoes_by_3_degree_bins.csv",
        "format": { "type": "csv" }
      },
      "transform": [
        { "calculate": "toNumber(datum.Longitude)", "as": "lon" },
        { "calculate": "toNumber(datum.Latitude)", "as": "lat" },
        { "filter": "isFinite(datum.lon) && isFinite(datum.lat)" },
        { "calculate": "floor(datum.lon / 3) * 3", "as": "lon_bin" },
        { "calculate": "floor(datum.lat / 3) * 3", "as": "lat_bin" },
        {
          "aggregate": [
            { "op": "count", "as": "tornado_count" }
          ],
          "groupby": ["lon_bin", "lat_bin"]
        }
      ],
      "mark": { "type": "point", "filled": true, "opacity": 0.8 },
      "encoding": {
        "longitude": { "field": "lon_bin", "type": "quantitative" },
        "latitude": { "field": "lat_bin", "type": "quantitative" },
        "size": {
          "field": "tornado_count",
          "type": "quantitative",
          "scale": { 
            "domain": [1, 160],
            "range": [50, 800] 
          },
          "legend": {
            "orient": "right",
            "offset": -20,
            "title": "Tornado Count",
            "values": [1, 30, 50, 100, 150]
          }
        },
        "color": {
          "value": "#0072B2"
        },
        "tooltip": [
          { "field": "tornado_count", "type": "quantitative", "title": "Tornadoes" }
        ]
      }
    }
  ]
}
